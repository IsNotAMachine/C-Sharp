namespace MathAppGUI
{
   // form class 
    public partial class Form1 : Form
    {
        // global variables
        Random random = new Random();
        int firstNum;
        int secondNum;
        int answer;
        int roundScore;
        int totScore;
        int totQuestions;
        int roundQuestions;
        int tries;

        // instantiating new variables as new objects
        public void getnumbers(int firstNum, int secondNum, int answer, int roundScore, int totScore, int totQuestions, int roundQuestions, int tries)
        {
            this.firstNum = firstNum;
            this.secondNum = secondNum;
            this.answer = answer;
            this.roundScore = roundScore;
            this.totScore = totScore;
            this.totQuestions = totQuestions;
            this.roundQuestions = roundQuestions;
            this.tries = tries;
        }

        // getting round score 
        public int getRoundScore()
        {
            return roundScore;
        }
        // getting total score 
        public int getTotScore()
        {
            return totScore;
        }
        // getting total number of questions 
        public int getTotQuestions()
        {
            return totQuestions;
        }
        // getting number of questions in round 
        public int getRoundQuestions()
        {
            return roundQuestions;
        }
        // getting number of tries on a problem 
        public int getTries()
        {
            return tries;
        }
        // getting first number 
        public int getFirstNum()
        {
            return firstNum;
        }
        // getting secondary number
        public int getSecondNum()
        {
            return secondNum;
        }
        // getting answer
        public int getAnswer()
        {
            return answer;
        }
        // setting round score
        public void setRoundScore(int newRoundscore)
        {
            // adding 1 to score
            roundScore = newRoundscore + 1;  
        }
        // setting total score
        public void setTotScore(int newTotScore)
        {
            // adding 1 to score
            totScore = newTotScore + 1;
        }
        // setting total number of questions
        public void setTotQuestions(int newTotQuestions)
        {
            // adding 1 to score
            totQuestions = newTotQuestions + 1;
        }
        // setting number of questions in round 
        public void setRoundQuestions(int newRoundQuestions)
        {
            // adding 1 to score
            roundQuestions = roundQuestions + 1;
        }
        // setting the number of tries 
        public void setTries(int newTries)
        {
            // adding 1 to score
            tries = tries + 1;
        }
        // setting first number
        public void setFirstNum(int newFirstNum, int base1, int base2)
        {
            // generate first random number given a base   
            firstNum = random.Next(base1, base2);
        }
        // setting secondary number
        public void setSecondNum(int newSecondNum, int base1, int base2)
        {
            // generate second random number given the bases
            secondNum = random.Next(base1, base2);
        }
        // setting answer
        public void setAnswer(int firstNum, int secondNum)
        {
            // getting answer from first and second number
            answer = firstNum * secondNum;
        }
     
        // initializing form 1
        public Form1()
        {
            InitializeComponent();
        }
        // object references with start click 
        private void btn_Start_Click(object sender, EventArgs e)
        {
            // showing and hiding relavant objects on start click
            btn_Base.Visible = true;
            btn_All.Visible = true;
            btn_Exit.Visible = true;
            lbl_Exit.Visible = false;
            lbl_roundScore.Visible = true;

            // setting scores to 0 at the start
            roundScore = 0;
            roundQuestions = 0;
            totScore = 0;
            totQuestions = 0;
            tries = 0;

            // printing scores
            lbl_roundScore.Text = "Round Score: " + getRoundScore() + " out of " + getRoundQuestions();
            lbl_TotalScore.Visible = true;
            lbl_TotalScore.Text = "Total Score: " + getTotScore() + " out of " + getTotQuestions();
            
        }
        // object references with base click 
        private void btn_Base_Click(object sender, EventArgs e)
        {
            // showing and hiding relavant objects
            lbl_All.Visible = false;
            txtbx_All.Visible = false;
            lbl_Enter.Visible = false;
            txtbx_answer.Visible = false;
            base_One.Visible = true;
            base_Two.Visible = true;
            base_Three.Visible = true;
            base_Four.Visible = true;
            base_Five.Visible = true;
            base_Six.Visible = true;
            base_Seven.Visible = true;
            base_Eight.Visible = true;
            base_Nine.Visible = true;
            lbl_Exit.Visible = false;

            // reseting round scores to 0 
            roundScore = 0;
            roundQuestions = 0;
            tries = 0;
        }
        // object references with all click 
        public void btn_All_Click(object sender, EventArgs e)
        {
            // showing and hiding relavant objects
            lbl_Base.Visible = false;
            txtbox_Base1.Visible = false;
            lbl_All.Visible = true;
            txtbx_All.Visible = true;
            lbl_Exit.Visible = false;
            lbl_Enter.Visible = true;
            base_One.Visible = false;
            base_Two.Visible = false;
            base_Three.Visible = false;
            base_Four.Visible = false;
            base_Five.Visible = false;
            base_Six.Visible = false;
            base_Seven.Visible = false;
            base_Eight.Visible = false;
            base_Nine.Visible = false;
            txtbox_Base1.Visible = false;
            txtbox_Base2.Visible = false;
            txtbox_Base3.Visible = false;
            txtbox_Base4.Visible = false;
            txtbox_Base5.Visible = false;
            txtbox_Base6.Visible = false;
            txtbox_Base7.Visible = false;
            txtbox_Base8.Visible = false;
            txtbox_Base9.Visible = false;
            
            // setting round score to 0 
            roundScore = 0;
            roundQuestions = 0;
            tries = 0;

            // getting numbers for all and displaying them
            setFirstNum(firstNum, 1, 99);
            setSecondNum(secondNum, 1, 99);
            setAnswer(firstNum, secondNum);
            String text = getFirstNum() + " X " + getSecondNum();
            lbl_All.Text = text;
        }
        // enter object all numbers
        private void txtbx_All_KeyDown(object sender, KeyEventArgs e)
        {
            String textBox = txtbx_All.Text;

            // at enter key test answer is valid option 
            if (e.KeyCode == Keys.Enter)
            {
                e.Handled = e.SuppressKeyPress = true;
                try
                {
                    int result = Int32.Parse(textBox);
                    int answer = getAnswer();
                    // correct add and print scores get new numbers
                    if (result == answer && tries == 0)
                    {
                        txtbx_answer.Visible = true;
                        txtbx_answer.Text = "Good Job!";
                        setRoundQuestions(roundQuestions);
                        setRoundScore(roundScore);
                        setTotQuestions(totQuestions);
                        setTotScore(totScore);
                        lbl_roundScore.Text = "Round Score: " + getRoundScore() + " out of " + getRoundQuestions();
                        lbl_TotalScore.Text = "Total Score: " + getTotScore() + " out of " + getTotQuestions();
                        setFirstNum(firstNum, 1, 99);
                        setSecondNum(secondNum, 1, 99);
                        setAnswer(firstNum, secondNum);
                        String text = getFirstNum() + " X " + getSecondNum();
                        lbl_All.Text = text;
                        txtbx_All.Text  = String.Empty;
                        tries = 0;
                    }
                    // correct multiple trys no adding to score 
                    else if (result == answer && tries != 0)
                    {
                        txtbx_answer.Visible = true;
                        txtbx_answer.Text = "Good Job!";
                        lbl_roundScore.Text = "Round Score: " + getRoundScore() + " out of " + getRoundQuestions();
                        lbl_TotalScore.Text = "Total Score: " + getTotScore() + " out of " + getTotQuestions();
                        setFirstNum(firstNum, 1, 99);
                        setSecondNum(secondNum, 1, 99);
                        setAnswer(firstNum, secondNum);
                        String text = getFirstNum() + " X " + getSecondNum();
                        lbl_All.Text = text;
                        txtbx_All.Text = String.Empty;
                        tries = 0;
                    }
                    // incorrect add questions try again 
                    else if (result != answer)
                    {
                        if(tries == 0)
                        {
                            setRoundQuestions(roundQuestions);
                            setTotQuestions(totQuestions);
                            tries++;
                            lbl_roundScore.Text = "Round Score: " + getRoundScore() + " out of " + getRoundQuestions();
                            lbl_TotalScore.Text = "Total Score: " + getTotScore() + " out of " + getTotQuestions();
                            txtbx_answer.Visible = true;
                            txtbx_answer.Text = "Why you dissapoint family!? ";
                            txtbx_All.Text = String.Empty;
                        }
                        else
                        {
                            txtbx_answer.Visible = true;
                            txtbx_answer.Text = "Why you dissapoint family!? ";
                            txtbx_All.Text = String.Empty;
                        }                        
                    }
                }
                catch
                {
                    txtbx_answer.Visible = true;
                    txtbx_answer.Text = "Enter a value";
                    txtbx_All.Text = String.Empty;
                }
            }
        }
        // butten exit objects and score 
        private void btn_Exit_Click(object sender, EventArgs e)
        {
            // show and hide relavant objects
            lbl_All.Visible = false;
            lbl_Base.Visible = false;
            lbl_Exit.Visible = true;
            txtbx_All.Visible = false;
            txtbox_Base1.Visible = false;
            txtbox_Base2.Visible = false;
            txtbox_Base3.Visible = false;
            txtbox_Base4.Visible = false;
            txtbox_Base5.Visible = false;
            txtbox_Base6.Visible = false;
            txtbox_Base7.Visible = false;
            txtbox_Base8.Visible = false;
            txtbox_Base9.Visible = false;
            lbl_Enter.Visible = false;
            txtbx_answer.Visible = false; 
            base_One.Visible = false;
            base_Two.Visible = false;
            base_Three.Visible = false;
            base_Four.Visible = false;
            base_Five.Visible = false;
            base_Six.Visible = false;
            base_Seven.Visible = false;
            base_Eight.Visible = false;
            base_Nine.Visible = false;
            btn_All.Visible = false;
            btn_Base.Visible = false;
            
            // print final score
            lbl_Exit.Text = "Total Score: " + getTotScore() + " out of " + getTotQuestions();
        }
