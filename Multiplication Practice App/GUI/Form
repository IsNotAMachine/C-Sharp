        // text box for base 1 
        private void txtbox_Base1_KeyDown(object sender, KeyEventArgs e)
        {
            String textBox = txtbox_Base1.Text;
            // on enter test if correct input
            if (e.KeyCode == Keys.Enter)
            {
                e.Handled = e.SuppressKeyPress = true;
                try
                {
                    int result = Int32.Parse(textBox);
                    int answer = getAnswer();
                    // correct add scores get new numbers
                    if (result == answer && tries == 0)
                    {
                        txtbx_answer.Visible = true;
                        txtbx_answer.Text = "Good Job!";
                        setRoundQuestions(roundQuestions);
                        setRoundScore(roundScore);
                        setTotQuestions(totQuestions);
                        setTotScore(totScore);
                        lbl_roundScore.Text = "Round Score: " + getRoundScore() + " out of " + getRoundQuestions();
                        lbl_TotalScore.Text = "Total Score: " + getTotScore() + " out of " + getTotQuestions();
                        setFirstNum(firstNum, 10, 19);
                        setSecondNum(secondNum, 10, 19);
                        setAnswer(firstNum, secondNum);
                        String text = getFirstNum() + " X " + getSecondNum();
                        lbl_Base.Text = text;
                        txtbox_Base1.Text = String.Empty;
                        tries = 0;
                    }
                    // second try correct don't add score get new numbers
                    else if (result == answer && tries != 0)
                    {
                        txtbx_answer.Visible = true;
                        txtbx_answer.Text = "Good Job!";
                        lbl_roundScore.Text = "Round Score: " + getRoundScore() + " out of " + getRoundQuestions();
                        lbl_TotalScore.Text = "Total Score: " + getTotScore() + " out of " + getTotQuestions();
                        setFirstNum(firstNum, 10, 19);
                        setSecondNum(secondNum, 10, 19);
                        setAnswer(firstNum, secondNum);
                        String text = getFirstNum() + " X " + getSecondNum();
                        lbl_Base.Text = text;
                        txtbox_Base1.Text = String.Empty;
                        tries = 0;
                    }
                    // incorrect add questions try again
                    else if (result != answer)
                    {
                        if(tries == 0)
                        {
                            setRoundQuestions(roundQuestions);
                            setTotQuestions(totQuestions);
                            tries++;
                            lbl_roundScore.Text = "Round Score: " + getRoundScore() + " out of " + getRoundQuestions();
                            lbl_TotalScore.Text = "Total Score: " + getTotScore() + " out of " + getTotQuestions();
                            txtbx_answer.Visible = true;
                            txtbx_answer.Text = "Why you dissapoint family!? ";
                            txtbox_Base1.Text = String.Empty;
                        }
                        else
                        {
                            txtbx_answer.Visible = true;
                            txtbx_answer.Text = "Why you dissapoint family!? ";
                            txtbox_Base1.Text = String.Empty;
                        }                       
                    }
                }
                // input not correct type try again 
                catch
                {
                    txtbx_answer.Visible = true;
                    txtbx_answer.Text = "Enter a value";
                    txtbox_Base1.Text = String.Empty;
                }
            }
        }
        // text box for base 2
        private void txtbox_Base2_KeyDown(object sender, KeyEventArgs e)
        {
            String textBox = txtbox_Base2.Text;
            // on enter test if input is correct
            if (e.KeyCode == Keys.Enter)
            {
                e.Handled = e.SuppressKeyPress = true;
                try
                {
